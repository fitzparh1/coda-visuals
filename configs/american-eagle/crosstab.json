{
  "type": "matrix",
  "data": {
    "datasets": [{
      "label": "lululemon",
      "data": [
        { "x": "Leggings", "y": "lululemon", "v": 56 },
        { "x": "Shorts",   "y": "lululemon", "v": 78 },
        { "x": "Pants",    "y": "lululemon", "v": 47 },
        { "x": "Bags",     "y": "lululemon", "v": 79 },
        { "x": "Jackets",  "y": "lululemon", "v": 69 },
        { "x": "Shirts",   "y": "lululemon", "v": 58 },
        { "x": "Shoes",    "y": "lululemon", "v": 70 },
        { "x": "Yoga Mats","y": "lululemon", "v": 74 },
        { "x": "Tank Tops","y": "lululemon", "v": 76 },
        { "x": "Hats",     "y": "lululemon", "v": 84 }
      ],
      "backgroundColor": "function(ctx) { const v = ctx.raw.v; const t = Math.max(0, Math.min(1, (v + 100) / 200)); function lerp(a,b,t){return Math.round(a+(b-a)*t);} let r,g,b; if(t<0.5){const k=t/0.5; r=255; g=lerp(0,255,k); b=0;} else {const k=(t-0.5)/0.5; r=lerp(255,0,k); g=255; b=0;} return `rgb(${r},${g},${b})`; }",
      "width": "function(ctx) { const x=ctx.chart.scales.x; return Math.abs(x.getPixelForTick(1)-x.getPixelForTick(0))-4; }",
      "height":"function(ctx) { const y=ctx.chart.scales.y; return Math.abs(y.getPixelForTick(1)-y.getPixelForTick(0))-4; }"
    }]
  },
  "options": {
    "responsive": true,
    "maintainAspectRatio": false,
    "plugins": {
      "legend": { "display": false },
      "tooltip": {
        "callbacks": {
          "title": "function(items) { return items[0].raw.x; }",
          "label": "function(ctx) { return ctx.raw.v; }"
        }
      }
    },
    "scales": {
      "x": {
        "type": "category",
        "labels": ["Leggings","Shorts","Pants","Bags","Jackets","Shirts","Shoes","Yoga Mats","Tank Tops","Hats"],
        "grid": { "display": false }
      },
      "y": {
        "type": "category",
        "labels": ["lululemon"],
        "grid": { "display": false }
      },
      "color": {
        "type": "linear",
        "min": -100,
        "max": 100,
        "axis": "x",
        "display": true,
        "position": "bottom"
      }
    }
  }
}
