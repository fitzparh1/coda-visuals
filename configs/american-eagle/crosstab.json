{
  "type": "matrix",
  "data": {
    "datasets": [{
      "label": "lululemon",
      "parsing": false,
      "data": [
        { "x": "Leggings", "y": "lululemon", "v": 56 },
        { "x": "Shorts",   "y": "lululemon", "v": 78 },
        { "x": "Pants",    "y": "lululemon", "v": 47 },
        { "x": "Bags",     "y": "lululemon", "v": 79 },
        { "x": "Jackets",  "y": "lululemon", "v": 69 },
        { "x": "Shirts",   "y": "lululemon", "v": 58 },
        { "x": "Shoes",    "y": "lululemon", "v": 70 },
        { "x": "Yoga Mats","y": "lululemon", "v": 74 },
        { "x": "Tank Tops","y": "lululemon", "v": 76 },
        { "x": "Hats",     "y": "lululemon", "v": 84 }
      ],
      "backgroundColor": "function(ctx){ const v = Number(ctx.raw.v||0); const t = Math.max(0, Math.min(1, v/100)); const l = 86 - 46*t; return `hsl(135, 55%, ${l}%)`; }",
      "borderWidth": 1,
      "borderColor": "#ffffff",
      "borderRadius": 6
    }]
  },
  "options": {
    "responsive": true,
    "maintainAspectRatio": false,
    "layout": { "padding": { "top": 8, "right": 12, "bottom": 28, "left": 72 } },
    "plugins": {
      "legend": { "display": false },
      "tooltip": {
        "callbacks": {
          "title": "function(items){ return items[0].raw.x; }",
          "label": "function(ctx){ return ctx.raw.v; }"
        }
      },
      "datalabels": {
        "color": "#0b2e13",
        "font": { "weight": "600", "size": 12 },
        "formatter": "function(value, ctx){ return ctx.raw.v; }",
        "anchor": "center",
        "align": "center",
        "clip": true
      }
    },
    "scales": {
      "x": {
        "type": "category",
        "labels": ["Leggings","Shorts","Pants","Bags","Jackets","Shirts","Shoes","Yoga Mats","Tank Tops","Hats"],
        "offset": true,
        "grid": { "display": false, "drawBorder": false },
        "ticks": { "minRotation": 50, "maxRotation": 50, "padding": 8 }
      },
      "y": {
        "type": "category",
        "labels": ["lululemon"],
        "grid": { "display": false, "drawBorder": false },
        "ticks": { "padding": 8 }
      }
    }
  }
}
