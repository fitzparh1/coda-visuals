{
  "type": "matrix",
  "data": {
    "datasets": [{
      "label": "lululemon",
      "parsing": false,
      "data": [
        { "x": "Leggings",  "y": "lululemon", "v": 56 },
        { "x": "Shorts",    "y": "lululemon", "v": 78 },
        { "x": "Pants",     "y": "lululemon", "v": 47 },
        { "x": "Bags",      "y": "lululemon", "v": 79 },
        { "x": "Jackets",   "y": "lululemon", "v": 69 },
        { "x": "Shirts",    "y": "lululemon", "v": 58 },
        { "x": "Shoes",     "y": "lululemon", "v": 70 },
        { "x": "Yoga Mats", "y": "lululemon", "v": 74 },
        { "x": "Tank Tops", "y": "lululemon", "v": 76 },
        { "x": "Hats",      "y": "lululemon", "v": 84 }
      ],

      /* Darker → lighter green ramp (0..100 → ~#1f7a2e .. #bfe9c6) */
      "backgroundColor": "function(ctx){ const v = Number(ctx.raw?.v||0); const t = Math.max(0, Math.min(1, v/100)); const L = 38 + (82-38)*(1-t); /* L: 38%..82% */ return `hsl(135, 58%, ${L}%)`; }",

      "borderWidth": 1,
      "borderColor": "#ffffff",
      "borderRadius": 8,

      /* Show value inside each tile */
      "datalabels": {
        "formatter": "function(value, ctx){ return ctx.raw.v; }",
        "font": { "size": 12, "weight": "600" },
        "anchor": "center",
        "align": "center",
        "clip": true,
        "color": "function(value, ctx){ const v = ctx.raw.v; return v >= 65 ? '#ffffff' : '#0b2e13'; }"
      }
    }]
  },

  "options": {
    "responsive": true,
    "maintainAspectRatio": false,
    "layout": { "padding": { "top": 8, "right": 12, "bottom": 28, "left": 72 } },

    "plugins": {
      "legend": { "display": false },
      "tooltip": {
        "callbacks": {
          "title": "function(items){ return items[0].raw.x; }",
          "label": "function(ctx){ return ctx.raw.v; }"
        }
      },
      /* keep plugin enabled globally (dataset overrides above) */
      "datalabels": { "display": true }
    },

    "scales": {
      "x": {
        "type": "category",
        "labels": ["Leggings","Shorts","Pants","Bags","Jackets","Shirts","Shoes","Yoga Mats","Tank Tops","Hats"],
        "offset": true,
        "grid": { "display": false, "drawBorder": false },
        "ticks": { "minRotation": 50, "maxRotation": 50, "padding": 8 }
      },
      "y": {
        "type": "category",
        "labels": ["lululemon"],
        "grid": { "display": false, "drawBorder": false },
        "ticks": { "padding": 8 }
      }
    }
  }
}
